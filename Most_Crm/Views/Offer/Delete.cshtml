@model Most_Crm.Models.Offer

@{
    ViewData["Title"] = "Teklif Sil";
}

<h2>Teklif Silme</h2>

<div>
    <h4>Bu teklifi silmek istediğinizden emin misiniz?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Teklif ID:</dt>
        <dd>@Model.OfferID</dd>


        <dt>Oluşturulma Tarihi:</dt>
        <dd>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OfferID" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
