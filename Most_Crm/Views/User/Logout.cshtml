@{
    ViewData["Title"] = "Çıkış Yap";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Most CRM | Çıkış Yap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color:aliceblue;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            width: 100%;
            max-width: 420px;
            height: 100%;
            max-height: 400px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            padding: 30px;
        }

        .btn-logout {
            width: 100%;
            margin-bottom: 10px;
            background-color: #DC3545;
            color: white;
        }

        .btn-cancel {
            width: 100%;
            background-color: #6C757D;
            color: white;
        }

        h3 {
            margin-bottom: 20px;
            color: #0b1957;
        }
    </style>
</head>
<body>

    <div class="card">
        <h3>⚠️ Çıkış yapmak istediğinize emin misiniz?</h3>
        <form asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-logout">Evet, Çıkış Yap</button>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-cancel">İptal</a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
