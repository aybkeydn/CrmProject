@model Most_Crm.DTOs.CustomerDTO

@{
    ViewData["Title"] = "Yeni Müşteri Ekle";
}

<h2>​Yeni Müşteri Ekle​</h2>

<form asp-action="Create">

    <div class="clearfix">

        <div class="left-side">
            <div class="form-group">
                <label>Ad Soyad</label>
                <input asp-for="NameSurname" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Sektör</label>
                <select asp-for="Sector" class="form-control">
                    <option value="Ağaç işleri">Ağaç işleri</option>
                    <option value="Eğlence,dinlenme,organizasyon">Eğlence,dinlenme,organizasyon</option>
                    <option value="Elektrik,elektronik,bilgisayar">Elektrik,elektronik,bilgisayar</option>
                    <option value="Gıda,tarım">Gıda,tarım</option>
                    <option value="Giyim,deri ürün,ev tekstili,dokuma">Giyim,deri ürün,ev tekstili,dokuma</option>
                    <option value="Hediyelik eşya,eğitim,basım,fotoğraf,çeşitli mallar">Hediyelik eşya,eğitim,basım,fotoğraf,çeşitli mallar</option>
                    <option value="Kuaför,berber,temizlik,spor,kozmetik,sağlık">Kuaför,berber,temizlik,spor,kozmetik,sağlık</option>
                    <option value="Metal,otomotiv,makine">Metal,otomotiv,makine</option>
                    <option value="Pazar,seyyar">Pazar,seyyar</option>
                    <option value="Ulaştırma hizmetleri">Ulaştırma hizmetleri</option>
                    <option value="Yapı sanatları">Yapı sanatları</option>
                    
                </select>
            </div>

            <div class="form-group">
                <label>Durum</label>
                <select asp-for="Status" class="form-control">
                    <option value="Potansiyel">Potansiyel</option>
                    <option value="Aktif">Garanti</option>
                </select>
            </div>


            <!-- Şirket mi, Bireysel mi? -->
            <div class="form-group">
                <label>Müşteri Türü</label>
                <select asp-for="CustomerType" class="form-control">
                    <option value="Bireysel">Bireysel</option>
                    <option value="Şirket">Şirket</option>
                </select>
            </div>

            <!-- Most Idea / Most Digital Şirket Seçimi -->
            <div class="form-group">
                <label>Şirket</label>
                <select asp-for="CompanyName" class="form-control">
                    <option value="Most Idea">Most Idea</option>
                    <option value="Most Digital">Most Digital</option>
                </select>
            </div>

        </div>
        <div class="right-side">
          

            <!-- 👇 ContactPerson giriş alanları -->
            @* <h4>Diğer İrtibat Bilgileri</h4>


            <div class="form-group">
                <label>Ad Soyad</label>
                <input asp-for="ContactPersons[0].Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>İrtibat Kişisi Telefon</label>
                <input asp-for="ContactPersons[0].PhoneNumber" class="form-control" />
            </div> *@

            <div class="form-group">
                <label for="Country">Ülke</label>
                <input type="text" name="Country" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="City">Şehir</label>
                <input type="text" name="City" class="form-control" required />
            </div>


            <!-- E-posta ve Telefon Durumu -->
            <div class="form-group">
                <label>E-posta Gönderildi mi?</label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" name="EmailSent" value="true" asp-for="EmailSent" class="radio-input" checked>
                        <span class="radio-text yes">Evet</span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="EmailSent" value="false" asp-for="EmailSent" class="radio-input">
                        <span class="radio-text no">Hayır</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label>Telefon Araması Yapıldı mı?</label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" name="PhoneCallMade" value="true" asp-for="PhoneCallMade" class="radio-input">
                        <span class="radio-text yes">Evet</span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="PhoneCallMade" value="false" asp-for="PhoneCallMade" class="radio-input" checked>
                        <span class="radio-text no">Hayır</span>
                    </label>
                </div>
            </div>


            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>

<style>
    .left-side {
        float: left;
        width: 48%; /* Sol taraf genişliği */

    }

    .right-side {
        float: right;
        width: 48%; /* Sağ taraf genişliği */

    }

    .form-group {
        margin-bottom: 15px; /* Form elemanları arasında boşluk */
    }

    .clearfix{
        position:relative;
        top:40px;
    }

    .btn-success:hover {
        background: deepskyblue;
    }


    .clearfix::after {
        content: "";
        display: table;
        clear: both;
    }


    h2{
        position:relative;
        top:25px;
        font-size: 32px;
        font-weight: bold;

    }

    /*phone  call and email status button */

    .radio-group {
        display: flex;
        gap: 15px;
        margin-top: 5px;

    }

    .radio-label {
        display: flex;
        align-items: center;
        cursor: pointer;

    }

    .radio-input {
        display: none;

    }

    .radio-text {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        color: white;
        border-radius: 5px;
        transition: 0.3s;
    }

        /* Evet (Yeşil) */
        .radio-text.yes {
            background-color: lightgray;
            border: 2px solid green;
            color: green;
        }

        /* Hayır (Kırmızı) */
        .radio-text.no {
            background-color: lightgray;
            border: 2px solid red;
            color: red;
        }

    /* Seçili olduğunda renk değişimi */
    .radio-input:checked + .radio-text.yes {
        background-color: green;
        color: white;
    }

    .radio-input:checked + .radio-text.no {
        background-color: red;
        color: white;
    }

    label{
        font-weight:600;
    }


</style>